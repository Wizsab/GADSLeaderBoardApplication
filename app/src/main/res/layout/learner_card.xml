<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageLearn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/text_margin_standard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/text_margin_standard" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin_standard"
                android:layout_marginTop="@dimen/text_margin_standard"
                android:text="TextView"
                android:textSize="@dimen/title_large"
                app:layout_constraintStart_toEndOf="@+id/imageLearn"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/text_margin_standard" />

            <TextView
                android:id="@+id/tvHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin_standard"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="hour"
                android:textSize="@dimen/title_small"
                app:layout_constraintStart_toEndOf="@+id/imageLearn"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:layout_marginLeft="@dimen/text_margin_standard" />
            <TextView
                android:id="@+id/tvTextHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/start_text_margin"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="learning hours,"
                android:textSize="@dimen/title_small"
                app:layout_constraintStart_toEndOf="@+id/tvHours"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:layout_marginLeft="@dimen/text_margin_standard" />
            <TextView
                android:id="@+id/tvCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/start_text_margin"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="Country"
                android:textSize="@dimen/title_small"
                app:layout_constraintStart_toEndOf="@+id/tvTextHours"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:layout_marginLeft="@dimen/text_margin_standard" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>




